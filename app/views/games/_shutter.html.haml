#shutter
  #arrow
  .column-primary
    #graph
      :javascript
        var amazon = [#{@amazon_values.join(',')}];
        var best_buy = [#{@best_buy_values.join(',')}];
        var glyde = [#{@glyde_values.join(',')}];
                  
    %ul.side-by-side
      - @top_values.each do |top_value|
        %li
          .pbw
            .b
              - url = fill_in(@vendors[top_value[0].to_sym][:url], :id => eval("@game.#{@vendors[top_value[0].to_sym][:permalink]}_id"))
              %a.vn{:href=> url }
                = @vendors[top_value[0].to_sym][:name]
              %a.tv{:href=> url }
                = currency top_value[1]
          .description
            = @vendors[top_value[0].to_sym][:conditions]
            
  .column-secondary
    %ul.tool-list
      - if current_user && is_library_item?(@game.id)
        %li.library-item.library-toggle
          %a.current-user-library{:href => library_toggle_path(:game_id => @game.id), :title => "Remove from library", :rel => "nofollow"}
            You own this!
      - elsif current_user
        %li.library-item.library-toggle
          %a{:href => library_toggle_path(:game_id => @game.id), :rel => "nofollow"}
            Add to game library
      - else
        %li.library-item
          %a.sign-in-required{:href => library_toggle_path(:game_id => @game.id), :rel => "nofollow"}
            Add to game library
      %li.share
        - share_message = "Trade%20in%20#{@game.title}%20for%20up%20to%20#{currency @top_value.value}%20from%20#{@top_value.vendor.humanize}"
        %a{:href=>"#share"}
          Share trade-in values
        %ul
          %li
            %a{:href=>"mailto:?body=#{share_message}%20#{CGI::escape game_url(@game.upc)}"}
              Email
          %li
            %a{:href=>"https://twitter.com/share?url=#{CGI::escape game_url(@game.upc)}&text=#{share_message}&via=tradaculator", :class=>"popup"}
              Twitter
          %li
            %a{:href=>"https://www.facebook.com/sharer.php?u=#{CGI::escape game_url(@game.upc)}&t=#{share_message}", :class=>"popup"}
              Facebook
