footer{text-align: center;font:.825em sans-serif; color:#aaa; padding:0 0 20px; clear:both;}
	footer a{font-weight: bold;}

@media(min-width:769px){
	.p:nth-child(-n+4){border-top:none;}
	.p:nth-last-child(-n+4){border-bottom: none;}
	.p:nth-child(4n+1) .pw{border-left:none;}
	.p:nth-child(4n+4) .pw{border-right:none;}
}

@media (max-width:768px){
	h1{margin-top:0; height:auto;}
	h3{font-size:2.5em; margin-top:1em;}
	#mh{text-align: center;}
		#mh div{width:auto;}
		#mh p{display: none;}
		#b{float:none; font-size:2.2em;}
		#mh form{float: none; width:280px; margin:0 auto;}
		#s{width:270px;  }
	#pl{margin:12px 0 0; width:auto;}
		#pl:after{content:""; display:table; clear:both;}
	.p{text-align: left; float:none;  width:92%; margin:0 4%; padding:10px 0; display: block; float:left;}
		.pw{border-left:none; border-right:none; padding:0;}
		.p header p{margin-bottom:.75em;}
		
	.f{float:left; width:80px; height: auto; min-height: 80px; margin:0 20px 0 0;}
		.f img{max-width:100%; display: block;}
	.dd{font-size:1em; line-height: 2; width:160px;}
}
@media (min-width:551px) and (max-width:768px) {
	.p{float:left; width:46%; margin:0 2%; height:105px; }
	#mh div, #pl{width:auto; }
}
@media (max-width:550px){
	.p:first-child{border-top:none;}
	.p:last-child{border-bottom: none;}
}