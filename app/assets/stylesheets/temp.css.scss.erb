.pw{border-right:1px solid #d4d3d3; border-left:1px solid #f7f5f5; padding:0 10px;}

.f{height:160px; display: table-cell; vertical-align: bottom; width:200px; line-height: 0;}

.p header p{font-size:.75em; font-weight: bold; margin:0 0 .5em; height:1em;}

.pbw{padding:.4em; background: rgba(0,0,0,.1); display: inline-block; border-radius:1.5em; position: relative; cursor: pointer;}

.b{font-size:12px; color:#fff; text-shadow:0 1px 0 #000; position: relative; overflow: hidden; }

.b a{
text-decoration: none; padding:10px;
background: #4ab; /* Old browsers */
background: -moz-linear-gradient(#1b95aa,#06687a); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, from(#1b95aa), to(#06687a)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(#1b95aa,#06687a); /* Chrome10+,Safari5.1+ */
background: -ms-linear-gradient(#1b95aa,#06687a); /* IE10+ */
background: linear-gradient(#1b95aa,#06687a); /* W3C */
}

.b a:hover{
background: #4bd; /* Old browsers */
background: -moz-linear-gradient(#1caec5,#066172); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, from(#1caec5), to(#066172)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(#1caec5,#066172); /* Chrome10+,Safari5.1+ */
background: -ms-linear-gradient(#1caec5,#066172); /* IE10+ */
background: linear-gradient(#1caec5,#066172); /* W3C */
}

.b a:active{
background: #489; /* Old browsers */
background: -moz-linear-gradient(#1a6f80,#087e93); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom,from(#1a6f80), to(#087e93)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(#1a6f80,#087e93); /* Chrome10+,Safari5.1+ */
background: -ms-linear-gradient(#1a6f80,#087e93); /* IE10+ */
background: linear-gradient(#1a6f80,#087e93); /* W3C */
-webkit-box-shadow:0 2px 5px rgba(0,0,0,0.4) inset; box-shadow:0 2px 5px rgba(0,0,0,0.4) inset;
}

a.vn{
